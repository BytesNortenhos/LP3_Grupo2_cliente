                <div class="flex justify-center">
                    <div class="card w-96 bg-base-100 border-2 border-neutral mt-20 mb-20">
                       <div class="card-body">
                            <% if (alert === true) { %>
                                <%- include('alert', {type: type, message: message}); %>
                            <% } %>
                           <form method="POST" action="/login">
